# Server Configuration
PORT=3001
NODE_ENV=development

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key-here
COSMOS_DATABASE_NAME=taskflow-ai

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Legacy deployment name (deprecated, use Triple-Tier below)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# Triple-Tier AI Architecture (Quality-First Strategy)
# Tier 1: Architect - Initial task breakdown (eliminates "책상 정리" problem)
AZURE_OPENAI_ARCHITECT=o3-mini

# Tier 2: Coach - Quick encouragement and tips
AZURE_OPENAI_COACH=gpt-4o-mini

# Tier 3: Deep Dive - Recursive breakdown for 10+ min tasks
AZURE_OPENAI_DEEPDIVE=o3-mini

# Fallback - Used when primary models fail
AZURE_OPENAI_FALLBACK=gpt-4o

# Azure AI Language
AZURE_LANGUAGE_ENDPOINT=https://your-language-resource.cognitiveservices.azure.com/
AZURE_LANGUAGE_API_KEY=your-language-api-key-here

# Azure Notification Hubs (Optional for MVP)
AZURE_NOTIFICATION_HUB_CONNECTION_STRING=your-connection-string-here
AZURE_NOTIFICATION_HUB_NAME=taskflow-notifications

# CORS
CORS_ORIGIN=http://localhost:3000

# Google Calendar Integration (for smart scheduling)
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3001/api/calendar/auth/google/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000
